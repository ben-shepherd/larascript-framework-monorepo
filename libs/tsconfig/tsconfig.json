{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "module": "CommonJS",
        "target": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}