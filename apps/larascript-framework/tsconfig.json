{
    "extends": "@larascript-framework/tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "module": "CommonJS",
        "target": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "*.config.*"],
    "exclude": [
        "node_modules",
        "dist",
        "../../libs/*/dist"
    ]
}