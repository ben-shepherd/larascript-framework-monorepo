{
  "name": "@repo/larascript-utils",
  "version": "1.0.8",
  "description": "A comprehensive TypeScript utility library providing essential tools for common programming tasks in the Larascript Framework ecosystem.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-shepherd/larascript-utils"
  },
  "license": "ISC",
  "author": "ben.shepherd@gmx.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc --skipLibCheck && npx tsc-alias",
    "build:watch": "tsc --watch --skipLibCheck",
    "lint": "eslint --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json|tsx|mdx)\" --log-level silent",
    "check-exports": "node ./scripts/check-exports.js",
    "check": "npm run format && npm run lint:fix && npm run typecheck && npm run check-exports",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "upstream:setup": "git remote add upstream git@github.com:ben-shepherd/larascript-forkable-bundle.git && git remote set-url --push upstream no-pushing",
    "upstream:fetch": "git fetch upstream",
    "upstream:merge": "git fetch upstream && git merge upstream/main",
    "upstream:rebase": "git fetch upstream && git rebase upstream/main",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@repo/cast-js": "github:ben-shepherd/cast-js",
    "@repo/dot-notation-extractor": "github:ben-shepherd/dot-notation-extractor",
    "crypto": "^1.0.1",
    "lodash": "^4.17.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.10.0",
    "tsc-alias": "^1.8.16",
    "validate-branch-name": "^1.3.2"
  },
  "validate-branch-name": {
    "pattern": "^(feat|fix|hotfix|release|test|experimental|refactor)/.+$",
    "errorMsg": "Branch name validation failed"
  }
}
