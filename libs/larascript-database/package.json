{
  "name": "@larascript-framework/larascript-database",
  "version": "1.0.0",
  "description": "Larascript Database",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-shepherd/larascript-database.git"
  },
  "license": "ISC",
  "author": "ben.shepherd@gmx.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "db:restart": "npm run db:postgres:restart && npm run db:mongodb:restart",
    "db:up": "npm run db:postgres:up && npm run db:mongodb:up",
    "prepare": "npm run build",
    "test:nodb": "jest --runInBand --passWithNoTests",
    "test": "npm run db:restart && jest --runInBand --passWithNoTests && npm run db:down",
    "test:watch": "npm run db:restart && jest --runInBand --watch --passWithNoTests && npm run db:down",
    "test:coverage": "npm run db:restart && jest --runInBand --coverage --passWithNoTests && npm run db:down",
    "build": "tsc --skipLibCheck && npx tsc-alias",
    "build:watch": "tsc --watch --skipLibCheck",
    "lint": "eslint --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json|tsx|mdx)\" --log-level silent",
    "check-exports": "node ./scripts/check-exports.js",
    "check": "npm run format && npm run lint:fix && npm run typecheck && npm run check-exports",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "upstream:setup": "git remote add upstream git@github.com:ben-shepherd/larascript-forkable-bundle.git && git remote set-url --push upstream no-pushing",
    "upstream:fetch": "git fetch upstream",
    "upstream:merge": "git fetch upstream && git merge upstream/main",
    "upstream:rebase": "git fetch upstream && git rebase upstream/main",
    "depcheck": "depcheck",
    "db:postgres:restart": "npm run db:postgres:down && npm run db:postgres:up",
    "db:postgres:down": "cd ./docker && docker-compose -f docker-compose.postgres.yml down -v",
    "db:postgres:up": "cd ./docker && docker-compose -f docker-compose.postgres.yml up -d",
    "db:postgres:delete-volume": "cd ./docker && docker volume rm postgres_data",
    "db:mongodb:restart": "npm run db:mongodb:down && npm run db:mongodb:up",
    "db:mongodb:up": "cd ./docker && docker-compose -f docker-compose.mongodb.yml up -d",
    "db:mongodb:down": "cd ./docker && docker-compose -f docker-compose.mongodb.yml down",
    "db:mongodb:delete-volume": "cd ./docker && docker volume rm mongodb_data"
  },
  "devDependencies": {
    "@larascript-framework/check-exports": "workspace:*",
    "@larascript-framework/crypto-js": "workspace:*",
    "@larascript-framework/eslint-config": "workspace:*",
    "@larascript-framework/jest-config": "workspace:*",
    "@larascript-framework/larascript-collection": "workspace:*",
    "@larascript-framework/larascript-core": "workspace:*",
    "@larascript-framework/larascript-observer": "workspace:*",
    "@larascript-framework/larascript-utils": "workspace:*",
    "@larascript-framework/test-helpers": "workspace:*",
    "@larascript-framework/tsconfig": "workspace:*",
    "tsc-alias": "^1.8.16"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "mongodb": "^6.18.0"
  }
}
