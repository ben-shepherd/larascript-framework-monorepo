{
  "name": "@repo/larascript-mail",
  "version": "1.0.1",
  "description": "Larascript bundle providing mail utilities and components.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-shepherd/larascript-mail"
  },
  "license": "ISC",
  "author": "ben.shepherd@gmx.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc --skipLibCheck && npx tsc-alias",
    "build:watch": "tsc --watch --skipLibCheck",
    "lint": "eslint --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "typecheck": "tsc --noEmit",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json|tsx|mdx)\" --log-level silent",
    "check-exports": "node ./scripts/check-exports.js",
    "check": "npm run format && npm run lint:fix && npm run typecheck && npm run check-exports",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "upstream:setup": "git remote add upstream git@github.com:ben-shepherd/larascript-forkable-bundle.git && git remote set-url --push upstream no-pushing",
    "upstream:fetch": "git fetch upstream",
    "upstream:merge": "git fetch upstream && git merge upstream/main",
    "upstream:rebase": "git fetch upstream && git rebase upstream/main",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@repo/larascript-core": "workspace:*",
    "@repo/larascript-logger": "github:ben-shepherd/larascript-logger",
    "@repo/larascript-views": "github:ben-shepherd/larascript-views",
    "nodemailer": "^7.0.5",
    "resend": "^6.0.1"
  },
  "devDependencies": {
    "@repo/jest-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "tsc-alias": "^1.8.16"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
}
